<!DOCTYPE displayplugin SYSTEM "../../../dtd/displayplugin.dtd">

<displayplugin x="0%" y="0%" width="100%" height="100%" hideroot="true">

<viewelement name="background_hor">

<!-- header background -->
	<area x="0" y="0" width="69%" height="19%" layer="1">
		<drawrectangle x="0" y="0" width="{areawidth}" height="{areaheight}-2" color="{clrTransBlack}" />
		<drawimage name="line_bottom" imagetype="skinpart" path="line_bottom" x="10%" y="{areaheight}-2" width="{areawidth}/1.5" height="2"/>
		<drawellipse x="{areawidth} - {areaheight}*0.15" y="{areaheight} - {areaheight}*0.15" width="{areaheight}*0.15" height="{areaheight}*0.15" color="{clrTransparent}" quadrant="-4"/>
	</area>	

<!-- date background -->
	<area x="70%" y="0%" width="30%" height="10%" layer="1">
		<drawrectangle x="0" y="0" width="{areawidth}" height="{areaheight}-2" color="{clrTransBlack}" />
		<drawimage name="line_bottom" imagetype="skinpart" path="line_bottom" x="10%" y="{areaheight}-2" width="{areawidth}/1.5" height="2"/>
		<drawellipse x="0" y="{areaheight} - {areaheight}*0.15" width="{areaheight}*0.15" height="{areaheight}*0.15" color="{clrTransparent}" quadrant="-3"/>
	</area>

<!-- button background -->
	<area x="5%" y="93%" width="90%" height="8%" layer="1">
		<drawimage name="line_top" imagetype="skinpart" path="line_top" x="10%" y="0" width="{areawidth}/1.5" height="2"/>
		<drawrectangle x="0" y="2" width="{areawidth}" height="{areaheight}-2" color="{clrTransBlack}" />
		<drawellipse x="0" y="0" width="{areaheight}*0.50" height="{areaheight}*0.50" color="{clrTransparent}" quadrant="-2"/>
		<drawellipse x="{areawidth} - {areaheight}*0.50" y="0" width="{areaheight}*0.50" height="{areaheight}*0.50" color="{clrTransparent}" quadrant="-1"/>
	</area>
		
<!-- channels background -->
	<area x="0" y="25%" width="14%" height="67%" layer="1">
		<drawrectangle x="0" y="0" width="{areawidth}-2" height="{areaheight}" color="{clrTransBlack}" />
		<drawimage name="line_right" imagetype="skinpart" path="line_right" x="{areawidth}-2" y="10%" width="2" height="{areaheight}/1.25"/>
		<drawellipse x="{areawidth} - {areaheight}*0.06" y="0" width="{areaheight}*0.06" height="{areaheight}*0.06" color="{clrTransparent}" quadrant="-1"/>
		<drawellipse x="{areawidth} - {areaheight}*0.06" y="{areaheight} - {areaheight}*0.06" width="{areaheight}*0.06" height="{areaheight}*0.06" color="{clrTransparent}" quadrant="-4"/>
	</area>
		 
<!-- schedule background x="15%" y="20%" width="85%" height="4%"> -->
	<area x="15%" y="25%" width="85%" height="67%" layer="1">
		<drawrectangle x="2" y="0" width="{areawidth}-2" height="{areaheight}" color="{clrTransBlack}" />
		<drawimage name="line_left" imagetype="skinpart" path="line_left" x="0" y="10%" width="2" height="{areaheight}/1.25"/>
		<drawellipse x="0" y="0" width="{areaheight}*0.05" height="{areaheight}*0.05" color="{clrTransparent}" quadrant="-2"/>
		<drawellipse x="0" y="{areaheight} - {areaheight}*0.05" width="{areaheight}*0.05" height="{areaheight}*0.05" color="{clrTransparent}" quadrant="-3"/>
	</area>
		 
<!-- datetimeline background -->
	<area x="0%" y="20%" width="14%" height="4%" layer="1">
		<drawrectangle x="0" y="0" width="{areawidth}-2" height="{areaheight}" color="{clrTransBlack}" />
		<drawellipse x="{areawidth} - {areaheight}*0.40" y="0" width="{areaheight}*0.40" height="{areaheight}*0.40" color="{clrTransparent}" quadrant="-1"/>
		<drawellipse x="{areawidth} - {areaheight}*0.40" y="{areaheight} - {areaheight}*0.40" width="{areaheight}*0.40" height="{areaheight}*0.40" color="{clrTransparent}" quadrant="-4"/>
	</area>
		 
</viewelement>

